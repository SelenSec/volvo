<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/design_default_color_on_secondary"
    android:visibility="visible"
    tools:context=".secimekrani">

    <TextView
        android:id="@+id/modeller"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Modellerimiz"
        android:textColor="#F6F3F3"
        android:textSize="24sp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/Buttonsuv"
        android:layout_width="145dp"
        android:layout_height="128dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:scaleType="centerCrop"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/modeller"
        app:srcCompat="@drawable/c" />

    <TextView
        android:id="@+id/textViewsuv"
        android:layout_width="74dp"
        android:layout_height="30dp"
        android:textColor="#CDCBCB"
        android:textSize="24sp"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="@+id/Buttonsuv"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/Buttonsuv"
        app:layout_constraintTop_toBottomOf="@+id/Buttonsuv"
        android:text="SUV"
        android:textAlignment="center"/>

    <ImageButton
        android:id="@+id/Buttonsedan"
        android:layout_width="142dp"
        android:layout_height="128dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:scaleType="centerCrop"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/modeller"
        app:srcCompat="@drawable/d" />

    <TextView
        android:id="@+id/textViewsedan"
        android:layout_width="87dp"
        android:layout_height="0dp"
        android:text=" SEDAN"
        android:textColor="#CAC9C9"
        android:textSize="24sp"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="@+id/Buttonsedan"
        app:layout_constraintStart_toStartOf="@+id/Buttonsedan"
        app:layout_constraintTop_toBottomOf="@+id/Buttonsedan" />

    <TextView
        android:id="@+id/textViewhatchback"
        android:layout_width="144dp"
        android:layout_height="28dp"
        android:text="  HATCHBACK"
        android:textColor="#BCBBBB"
        android:textSize="20sp"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="@+id/Buttonhatchback"
        app:layout_constraintStart_toStartOf="@+id/Buttonhatchback"
        app:layout_constraintTop_toBottomOf="@+id/Buttonhatchback" />

    <TextView
        android:id="@+id/textViewcrosscountry"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="CROSS COUNTRY"
        android:textAlignment="center"
        android:textColor="#BAB7B7"
        android:textSize="20sp"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="@+id/Buttoncrosscountry"
        app:layout_constraintStart_toStartOf="@+id/Buttoncrosscountry"
        app:layout_constraintTop_toBottomOf="@+id/Buttoncrosscountry" />

    <ImageButton
        android:id="@+id/Buttonrecharge"
        android:layout_width="195dp"
        android:layout_height="116dp"
        android:layout_marginTop="16dp"
        android:scaleType="centerCrop"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.071"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewhatchback"
        app:srcCompat="@drawable/g" />

    <TextView
        android:id="@+id/textViewrecharge"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="   RECHARGE"
        android:textColor="#BDBCBC"
        android:textSize="24sp"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/Buttonrecharge"
        app:layout_constraintStart_toEndOf="@+id/Buttonrecharge"
        app:layout_constraintTop_toTopOf="@+id/Buttonrecharge"
        app:layout_constraintVertical_bias="0.5" />

    <ImageButton
        android:id="@+id/Buttoncrosscountry"
        android:layout_width="129dp"
        android:layout_height="142dp"
        android:layout_marginTop="32dp"
        android:scaleType="centerCrop"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="@+id/textViewsedan"
        app:layout_constraintStart_toStartOf="@+id/textViewsedan"
        app:layout_constraintTop_toBottomOf="@+id/textViewsedan"
        app:srcCompat="@drawable/e" />

    <ImageButton
        android:id="@+id/Buttondevam"
        android:layout_width="254dp"
        android:layout_height="93dp"
        android:layout_marginTop="24dp"
        android:scaleType="centerCrop"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Buttonrecharge"
        app:srcCompat="@drawable/a" />

    <TextView
        android:id="@+id/textViewdevam"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:text="DEVAM ETMEK İÇİN BUTONA TIKLAYINIZ"
        android:textColor="#6A6868"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold|italic"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Buttondevam"
        android:gravity="center_horizontal" />

    <ImageButton
        android:id="@+id/Buttonhatchback"
        android:layout_width="129dp"
        android:layout_height="142dp"
        android:layout_marginTop="32dp"
        android:scaleType="centerCrop"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="@+id/textViewsuv"
        app:layout_constraintStart_toStartOf="@+id/textViewsuv"
        app:layout_constraintTop_toBottomOf="@+id/textViewsuv"
        app:srcCompat="@mipmap/y" />

</androidx.constraintlayout.widget.ConstraintLayout>